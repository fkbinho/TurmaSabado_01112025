package poo_inicio;

public class Principal {

	public static void main(String[] args) {

//		tipo   var     =  valor
		Carro meuCarro = new Carro(); // instanciando um objeto da classe Carro(criar)
		meuCarro.marca = "Toyota";
		meuCarro.modelo = "Corolla";
		meuCarro.ano = 2020;
		
		meuCarro.ligar();
		
		Carro seuCarro = new Carro();
		seuCarro.marca = "Honda";
		seuCarro.modelo = "Civic";
		seuCarro.ano = 2019;
		
		
		Carro carroDoVizinho = meuCarro;
		
		carroDoVizinho.marca = "Mercedes";
		meuCarro.marca = "Toyota";
		
		System.out.println("Meu carro: " + meuCarro.marca);
		System.out.println("Carro do Vizinho: " + carroDoVizinho.marca);

	}

}
